<th role="@(_sortable ? "button" : "")" @onclick="() => OnSort?.Invoke(PropertyName)">@ChildContent</th>

@code {
    private bool _sortable;

    [CascadingParameter]
    public Action<string> OnSort { get; set; }

    [Parameter]
    public string PropertyName { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        _sortable = !string.IsNullOrEmpty(PropertyName) && OnSort is not null;
        base.OnInitialized();
    }
}
